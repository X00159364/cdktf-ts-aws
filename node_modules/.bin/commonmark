#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node" -r esm "$basedir/../commonmark/bin/commonmark" "$@"
  ret=$?
else 
  node -r esm "$basedir/../commonmark/bin/commonmark" "$@"
  ret=$?
fi
exit $ret
